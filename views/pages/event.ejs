<%- include('../partials/main-header',{title:'edir-timeline'}); -%>

    <div class="page-header text-center" style="background-image: url('../../images/arts.jpg'); ">
        <div class="container">
            <h1 class="page-title font-weight-bold" STYLE="color: Black">Event POST</h1>
        </div>
        <!-- End .container -->
    </div>
    <!-- End .page-header -->

    <div class="page-content">
        <section class="about py-5" id="about">
            <div class="container">

                <div class="row">
                    <div class="col-10 mx-auto col-md-6 my-5">
                        <h1 class="text-capitalize">Edir <strong class="banner-title ">Events</strong></h1>
                        <p class="my-4 text-muted w-75">Here, in the Edir Events page, you can see coming events that are posted by the edir members. In addition to this, you can create and edit events of your own and attach an invitation card (ጥሪ ወረቀት) in which users can download and
                            use it as an entrance paper.
                        </p>
                        <a href="#events" class="btn btn-outline-secondary btn-black text-uppercase ">explore</a>

                    </div>
                    <div class="col-10 mx-auto col-md-6 align-self-center my-5">
                        <div class="about-img__container">
                            <img src="../../images/events2.jpg" class="img-fluid" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="container">
            <!-- section title -->
            <div class="row" id=e vents>
                <div class="col-10 mx-auto col-sm-6 text-center">
                    <h1 class="text-capitalize">Recent <strong class="banner-title ">EVENTS</strong></h1>
                </div>
            </div>
            <!-- end of section title -->
            <!--filter buttons -->
            <div class="row">
                <div class=" col-lg-8 mx-auto d-flex justify-content-around my-2 sortBtn flex-wrap">
                    <a href="/event" class="btn btn-outline-secondary  filter-btn m-2" data-filter="all">All</a>
                    <a href="/event/?cat=graduation" class="btn btn-outline-secondary  filter-btn m-2" data-filter="all">Graduation</a>
                    <a href="/event/?cat=wedding" class="btn btn-outline-secondary btn-black text-uppercase filter-btn m-2" data-filter="cakes">Wedding</a>
                    <a href="/event/?cat=funeral" class="btn btn-outline-secondary btn-black text-uppercase filter-btn m-2" data-filter="cupcakes">Funeral</a>
                    <a href="/event/?cat=other" class="btn btn-outline-secondary btn-black text-uppercase filter-btn m-2" data-filter="sweets">Other</a>
                </div>
            </div>
            <div class="row">
                <div class="col-10 mx-auto col-md-6">
                    <form method="get">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend ">
                                <span class="input-group-text search-box" id="search-icon"><i class="icon-search"></i></span>
                            </div>
                            <input type="text" name="search" class="form-control" placeholder='event....' id="search-item">
                        </div>
                    </form>
                </div>
            </div>
            <!-- search box -->
            <div class="row">

                <div class="products">
                    <div class="row justify-content-center" id="post">
                        <% if(res_data.length > 0){
                            res_data.forEach(function(rows){
                        %>
                            <div class="col-6 col-md-4 col-lg-4 col-xl-3" data-layout="fitRows">
                                <div class="product product-7 text-center">
                                    <article class="entry entry-grid text-center">
                                        <figure class="entry-media">
                                            <a>
                                                <img src="../../image/<%= rows.filename %>" alt="image desc">
                                            </a>
                                        </figure>
                                        <!-- End .entry-media -->

                                        <div class="entry-body">
                                            <div class="entry-meta">
                                                <a href="#">
                                                    <%= moment(rows.doe).format('Do MMMM, YYYY'); %>
                                                </a>
                                                <span class="meta-separator">|</span>
                                                <a href="#">by <%= %></a>
                                                <span class="meta-separator">|</span>
                                                <a href="event/edit/<%= slug = rows.slug %>">
                                                    <% if(user_id == rows.user_id){
                                                    %>
                                                        edit
                                                        <%
                                                        }
                                                    %>
                                                </a>
                                            </div>

                                            <h2 class="entry-title">
                                                <a href="">
                                                    <%= rows.title %>
                                                </a>
                                            </h2>
                                            <!-- End .entry-title -->

                                            <div class="entry-cats">
                                                <a href="#">
                                                    <%= rows.eventType%>
                                                </a>
                                            </div>
                                            <!-- End .entry-cats -->

                                            <div class="entry-content">
                                                <p>
                                                    <%= rows.eventDescription %>
                                                </p>
                                                <a href="/event/download/<%= path = rows.filename %>" class="read-more">Get Teri-Card</a>
                                            </div>
                                            <!-- End .entry-content -->
                                        </div>
                                        <!-- End .entry-body -->
                                    </article>
                                    <!-- End .entry -->
                                </div>
                                <!-- End .entry-item -->
                            </div>
                            <%
                        });
                    }
                    else{
                    %>
                                <tr>
                                    <td colspan="5">No Data Found</td>
                                </tr>
                                <% } %>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../partials/main-footer'); -%>